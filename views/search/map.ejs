<div class="panel panel-info" style="position: absolute; z-index: 999; top:100px;left: 20px; width: 340px">
    <div class="panel-heading">
        <div class="btn-group">
        <div class="input-group" style="width: 200px">
            <input type="text" class="form-control" placeholder="输入标题">
                <a class="input-group-addon">
                <i class="fa fa-search"></i>
                </a>
        </div>
        </div>
        <div class="btn-group">
            <select class="selectpicker area" name="area">
                <option>天河区</option>
                <option>海珠区</option>
